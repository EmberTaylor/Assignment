<UserControl x:Class="PharmaceuticalsApp.Ui.View.CommentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmaceuticalsApp.Ui.View"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" TextAlignment="Center" Text="Please Enter A Comment" />

        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" TextWrapping="Wrap" Height="Auto" 
                 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                 Text="{Binding Comment}" />

        <Button Grid.Column="0" Grid.Row="2" Content="Add"
                Command="{Binding }" />

        <Button Grid.Column="1" Grid.Row="2" Content="Back"
                Command="{Binding }" />
    </Grid>
</UserControl>
